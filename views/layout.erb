    <link rel="stylesheet" href="assets/css/main.css">
    <title>dough</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <img src="/assets/images/dough-logo.png" width="100" height="100" alt="dough">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <%# TODO: move elements to right and add social media icons%>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home
                <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" href="/cakes">Cakes</a>
                <a class="dropdown-item" href="/cookies">Cookies</a>
                <a class="dropdown-item" href="/muffins">Muffins</a>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contact</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="container">
        <%= yield %>
      </div>
        <footer id="sticky-footer" class="footer fixed-bottom bg-light">
          <div class="container">
            <form>
              <div class="form-group row justify-content-md-center">
                <label for="catalog-form">Get our catalog directly to your inbox!</label>
                <div class="input-group">
                  <input type="email" class="form-control form-control-sm" id="catalog-form" aria-describedby="emailHelp" placeholder="Enter email">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
            </form>
            <small>Copyright Â© 2018 Dough</small>
          </div>
        </footer>

      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
